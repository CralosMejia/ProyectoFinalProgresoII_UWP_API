<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AgendaPlusXamarin.Views.Contacts.createContact">
    <ContentPage.Content>
        <StackLayout Spacing="30" Background="#F0F3FA" Padding="10">
            <Button Text="X" HeightRequest="30" WidthRequest="30" VerticalOptions="Center" HorizontalOptions="End" 
                                    Clicked="closedButton" BackgroundColor="Transparent" CornerRadius="15" BorderColor="Black" 
                                    BorderWidth="1.5" FontSize="10.00" x:Name="dispose" Margin="15" FontAttributes="Bold"/>
            <Label Text="Create new Contact" FontSize="30" HorizontalOptions="Center" TextColor="#000000"/>
            <Entry x:Name="txtName_Contact" Placeholder="Contact Name " FontSize="30" ></Entry>

            <Entry x:Name="txtEmail_Contacts" Placeholder="Contact Email" FontSize="30" ></Entry>

            <Entry x:Name="txtNumber_Contact" Placeholder="Number" FontSize="30"></Entry>

            <Button Text="Create" CornerRadius="20" FontSize="20" Clicked="btn_crear_Clicked" BackgroundColor="#7FB6FF">
            </Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>